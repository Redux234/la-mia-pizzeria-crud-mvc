@model CategoriaView


<div class="container">
    <form asp-controller="Pizze" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Pizza:</label>
            <input asp-for="Pizze.Pizza" type="text" class="form-control" />
            <span asp-validation-for="Pizze.Pizza" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Pizze.Descrizione" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Pizze.Descrizione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Categoria:</label>
            <select asp-for="Pizze.CategoriaId" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach (Categoria categoria in Model.Categorie)
                {
                    <option value="@categoria.Id">@categoria.Pizza</option>
                }
            </select>
            <span asp-validation-for="Pizze.CategoriaId" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label>Path Immagine:</label>
            <input asp-for="Pizze.Immagine" type="text" class="form-control" />
            <span asp-validation-for="Pizze.Immagine" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <label>Prezzo:</label>
            <input asp-for="Pizze.Prezzo" type="text" class="form-control" />
            <span asp-validation-for="Pizze.Prezzo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Salva</button>
    </form>
</div>